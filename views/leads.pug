doctype html
html(lang='en')
  if leads  
  h1 Leads 
  for lead in leads 
    p(id=lead.id)
      span #{lead.email}

      a(href="/lead/" + lead.id) Details

      button(onclick=`deleteLead('${lead.id}')`) Delete
  script(src="https://code.jquery.com/jquery-3.3.1.min.js" crossorigin="anonymous")
  script(src="/javascripts/leads.js")